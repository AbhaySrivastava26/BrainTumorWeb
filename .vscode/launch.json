{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI with Uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "apis.main:app",  // replace with your python file without .py
        "--host",
        "localhost",
        "--port",
        "8000",
        "--reload"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
